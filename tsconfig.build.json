{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Оптимизации для production сборки
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    // Более строгие проверки для production (отложены до завершения миграции)
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    // Отключаем проверку JavaScript файлов
    "allowJs": false,
    "checkJs": false,

    // Пропускаем проверки типов для внешних библиотек
    "skipLibCheck": true,

    // Оптимизация вывода
    "removeComments": true,
    "stripInternal": true,

    // Для production
    "incremental": false
  },
  "include": [
    "src/**/*.ts",
    "index*.ts",
    "csv-to-json.ts",
    "json-to-csv.ts",
    "stream-*.ts",
    "errors.ts",
    "schema.d.ts",
    "browser.d.ts",
    "workers.d.ts",
    "plugins.d.ts",
    ],
  }
  "exclude": [
    "node_modules",
    "dist",
    "dist-types",
    "benchmarks",
    "demo",
    "docs",
    "examples",
    "packages",
    "plugins",
    "scripts",
    "test-d",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**",
    "**/__mocks__/**"
  ]
}
