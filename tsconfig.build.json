{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Оптимизации для production сборки
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    
    // Более строгие проверки для production (отложены до завершения миграции)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    
    // Отключаем проверку JavaScript файлов
    "allowJs": false,
    "checkJs": false,
    
    // Оптимизация вывода
    "removeComments": true,
    "stripInternal": true,
    
    // Для production
    "incremental": false
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-types",
    "benchmarks",
    "demo",
    "docs",
    "examples",
    "packages",
    "plugins",
    "scripts",
    "test-d",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**",
    "**/__mocks__/**"
  ]
}
